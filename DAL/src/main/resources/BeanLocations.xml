
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	<!-- <bean id="sessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean"> -->

	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
	<!-- <property name="dataSource" ref="dataSourceForJNDI"/> -->
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.bytecode.use_reflection_optimizer">false</prop>
				<prop key="hibernate.connection.driver_class">com.mysql.jdbc.Driver</prop>
				<prop key="hibernate.connection.username">user5</prop>
				<prop key="hibernate.connection.password">password</prop>
					<!-- 	<prop key="hibernate.connection.username">root</prop>
				<prop key="hibernate.connection.password">password</prop> -->
				<prop key="hibernate.connection.url">jdbc:mysql://ec2-54-234-99-88.compute-1.amazonaws.com:3306/PRODUCTDB</prop>
				<!-- <prop key="hibernate.connection.password">admin</prop>
				<prop key="hibernate.connection.url">jdbc:mysql://localhost:3306/productdb</prop> -->
				
				<prop key="hibernate.current_session_context_class">thread</prop>
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
				<prop key="hibernate.search.autoregister_listeners">false</prop>
				<prop key="hibernate.connection.autocommit">true</prop>
			</props>
		</property>
        
		<property name="annotatedClasses">
			<list>
				<!-- Inventory -->
				<value>com.vendertool.dal.productspecification.ProductSpecification</value>
				<value>com.vendertool.dal.image.Image</value>
				<value>com.vendertool.dal.merchantproduct.MerchantProduct</value>
				<value>com.vendertool.dal.productattribute.ProductAttribute</value>
				<value>com.vendertool.dal.productdescription.ProductDescription</value>
				<value>com.vendertool.dal.productvariation.ProductVariation</value>
				<value>com.vendertool.dal.account.Account</value>
<!-- 				<value>com.vendertool.dal.accountsubscription.AccountSubscription</value>
 -->				<value>com.vendertool.dal.accountmarketplace.AccountMarketplace</value>
				<value>com.vendertool.dal.address.Address</value>
			</list>
		</property>
	</bean>
	<!-- Hibernate session factory -->

	<bean id="productSpecificationDAO" class="com.vendertool.dal.productspecification.ProductSpecificationDaoImpl">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	<bean id="imageDAO" class="com.vendertool.dal.image.ImageDaoImpl">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
		<bean id="merchantProductDAO" class="com.vendertool.dal.merchantproduct.MerchantProductDaoImpl">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
		<bean id="productAttributeDAO" class="com.vendertool.dal.productattribute.ProductAttributeDaoImpl">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
		<bean id="productDescriptionDAO" class="com.vendertool.dal.productdescription.ProductDescriptionDaoImpl">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
		<bean id="productVariationDAO" class="com.vendertool.dal.productvariation.ProductVariationDaoImpl">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
		<bean id="productVariationDetailsDAO" class="com.vendertool.dal.productvariationdetails.ProductVariationDetailsDaoImpl">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	
			<bean id="accountDAO" class="com.vendertool.dal.account.AccountDaoImpl">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
		<!-- <bean id="accountSubscriptionDAO" class="com.vendertool.dal.accountsubscription.AccountSubscriptionDaoImpl">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean> -->
		<bean id="accountMarketplaceDAO" class="com.vendertool.dal.accountmarketplace.AccountMarketplaceDaoImpl">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
		<bean id="addressDAO" class="com.vendertool.dal.address.AddressDaoImpl">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	<bean id="batchJobDAO" class="com.vendertool.dal.address.BatchJobDaoImpl">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	    
</beans>